<% was_validated = dish.errors.any? %>

<%= form_with(model: dish, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% dish_name_class = "form-control" %>
    <% dish_name_was_invalid = dish.errors.include?(:dish_name) %>

    <% if was_validated %>
      <% if dish_name_was_invalid %>
        <% dish_name_class << " is-invalid" %>
      <% else %>
        <% dish_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dish_name %>
    <%= f.text_field :dish_name, class: dish_name_class, placeholder: "Enter dish name" %>
    <% if dish_name_was_invalid %>
      <% dish.errors.full_messages_for(:dish_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% source_class = "form-control" %>
    <% source_was_invalid = dish.errors.include?(:source) %>

    <% if was_validated %>
      <% if source_was_invalid %>
        <% source_class << " is-invalid" %>
      <% else %>
        <% source_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :source %>
    <%= f.text_field :source, class: source_class, placeholder: "Enter source" %>
    <% if source_was_invalid %>
      <% dish.errors.full_messages_for(:source).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% time_required_class = "form-control" %>
    <% time_required_was_invalid = dish.errors.include?(:time_required) %>

    <% if was_validated %>
      <% if time_required_was_invalid %>
        <% time_required_class << " is-invalid" %>
      <% else %>
        <% time_required_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :time_required %>
    <%= f.number_field :time_required, class: time_required_class, placeholder: "Enter time required" %>
    <% if time_required_was_invalid %>
      <% dish.errors.full_messages_for(:time_required).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% category_class = "form-control" %>
    <% category_was_invalid = dish.errors.include?(:category) %>

    <% if was_validated %>
      <% if category_was_invalid %>
        <% category_class << " is-invalid" %>
      <% else %>
        <% category_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :to_s, {}, class: "form-control" %>
    <% if category_was_invalid %>
      <% dish.errors.full_messages_for(:category).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="form-group">
    <% dish_photo_class = "form-control" %>
    <% dish_photo_was_invalid = dish.errors.include?(:dish_photo) %>

    <% if was_validated %>
      <% if dish_photo_was_invalid %>
        <% dish_photo_class << " is-invalid" %>
      <% else %>
        <% dish_photo_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dish_photo %>
    <%= f.file_field :dish_photo, class: "form-control" %>
    <% if dish_photo_was_invalid %>
      <% dish.errors.full_messages_for(:dish_photo).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% instruction_class = "form-control" %>
    <% instruction_was_invalid = dish.errors.include?(:instruction) %>

    <% if was_validated %>
      <% if instruction_was_invalid %>
        <% instruction_class << " is-invalid" %>
      <% else %>
        <% instruction_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :instructions %>
    <%= f.text_area :instructions, class: instruction_class, placeholder: "Enter instruction" %>
    <% if instruction_was_invalid %>
      <% dish.errors.full_messages_for(:instruction).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
