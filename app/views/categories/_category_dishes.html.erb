<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Dishes

    <a data-toggle="collapse" href="#category_dishes_new_form">
      Add dish
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @category.dishes.each do |dish| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to dish, dish %>

        <% if current_user == dish.user %>
          <%= link_to dish, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="category_dishes_new_form">
        <%= render partial: "categories/category_dishes_new_form" %>
      </div>
    </div>

  </ul>
</div>
